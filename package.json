{
  "name": "root",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/library"
    ],
    "nohoist": [
      "**/@babel/preset-env",
      "**/@babel/preset-env/**",
      "**/babel-loader",
      "**/babel-loader/**",
      "**/webpack",
      "**/webpack/**"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest test  -c jest.config.unit.ts  --forceExit",
    "test:integration": "node --experimental-vm-modules ./node_modules/.bin/jest test -c jest.config.integration.ts --forceExit",
    "deploy": "yarn deploy:docs && yarn deploy:example",
    "deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
    "deploy:example": "gh-pages --dist packages/starter/example/out --dest example --dotfiles",
    "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
    "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
    "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
    "nuke": "shx rm -rf {.,packages/*/*}/{node_modules,yarn.lock}",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.5",
    "eslint-config-react-app": "^7.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "@types/node-fetch": "^2.6.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-localstorage-mock": "^2.4.22",
    "web-vitals": "^2.1.4",
    "@types/eslint": "^8.2.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.32",
    "@types/prettier": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@types/rimraf": "^3.0.2",
    "@types/fs-extra": "^9.0.13",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "dotenv": "^16.0.3",
    "ipfs-core-types": "^0.13.0",
    "jest": "^29.2.2",
    "jest-extended": "^3.1.0",
    "json": "^11.0.0",
    "lerna": "^5.5.1",
    "patch-package": "^6.5.0",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "typescript-esm": "^2.0.0",
    "rimraf": "^3.0.2",
    "fs-extra": "^10.1.0"
  }
}