{
  "name": "pear2pear",
  "version": "0.0.4",
  "author": "marcus",
  "repository": "https://github.com/marcus-pousette",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "bin": {
    "pear2pear": "./lib/esm/bin.js"
  },
  "module": "lib/esm/index.mjs",
  "types": "lib/esm/index.d.ts",
  "exports": {
    "import": "./lib/esm/index.mjs"
  },
  "files": [
    "lib",
    "src",
    "src/nginx-template.conf",
    "!src/**/__tests__",
    "!lib/**/__tests__",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "clean": "shx rm -rf lib/*",
    "build": "yarn clean && tsc -p tsconfig.json; tsc-esm -p tsconfig.json",
    "postbuild": "echo '{\"type\":\"module\"} ' | node ../../node_modules/.bin/json > lib/esm/package.json",
    "test": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.ts --runInBand --forceExit",
    "test:unit": "node ../../node_modules/.bin/jest test  -c  ../../jest.config.unit.ts --runInBand --forceExit",
    "test:integration": "node ../node_modules/.bin/jest test -c  ../../jest.config.integration.ts --runInBand --forceExit"
  },
  "devDependencies": {
    "@dao-xyz/peerbit-test-utils": "^0.0.10",
    "@dao-xyz/peerbit-time": "^0.0.17",
    "dotenv": "^16.0.3",
    "go-ipfs": "^0.16.0",
    "ipfs": "^0.65.0",
    "ipfsd-ctl": "^12.2.2",
    "yargs": "^17.6.0"
  },
  "dependencies": {
    "@dao-xyz/peerbit": "^0.0.37",
    "@dao-xyz/peerbit-document": "^0.0.108",
    "@dao-xyz/peerbit-dynamic-access-controller": "^0.0.63",
    "@dao-xyz/peerbit-network-discovery": "^0.0.34",
    "@dao-xyz/peerbit-node": "^0.0.24",
    "@dao-xyz/peerbit-string": "^0.0.97",
    "buffer": "^6.0.3"
  },
  "gitHead": "1faebcea373a7c8078fcab0c083e3c42c846e77e"
}
